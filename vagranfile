# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

    config.vm.box = "box-cutter/ubuntu1604-desktop"

    config.vm.synced_folder '.', '/home/vagrant/synced'
  
    config.vm.provision "shell", privileged: false, inline: <<-SHELL
        echo "** Inline Shell Provision placeholder **"
    SHELL

    config.vm.provision "shell", privileged: true, path: "scripts/system-setup.sh"
 
    config.vm.provision "shell", privileged: true, path: "scripts/configure-desktop.sh"
  
    config.vm.provider "virtualbox" do |vb|
        vb.gui = true
        vb.memory = 4096
        vb.customize ['setextradata', :id, 'GUI/ScaleFactor', '2.00']
        vb.name = "vgde"
    end
    
    config.ssh.username = "vagrant"
	config.ssh.password = "vagrant"
    
end